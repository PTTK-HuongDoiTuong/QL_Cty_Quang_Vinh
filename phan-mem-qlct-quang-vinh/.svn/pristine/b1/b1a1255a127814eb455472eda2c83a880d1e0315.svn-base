                ketnoi.LenhKetNoi.Parameters.Add("@gia", SqlDbType.Decimal);
                ketnoi.LenhKetNoi.Parameters.Add("@sl", SqlDbType.Int);

                //ketnoi.LenhKetNoi.Parameters["@maVL"].Value = dtoVL.MaVL;
